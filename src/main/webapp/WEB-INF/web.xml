    <servlet-name>getAllTeachersServlet</servlet-name>
    <url-pattern>/getAllTeachersServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>getAllTuitionsServlet</servlet-name>
    <servlet-class>com.cn.servlet.getAllTuitionsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getAllTuitionsServlet</servlet-name>
    <url-pattern>/getAllTuitionsServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>registStateServlet</servlet-name>
    <servlet-class>com.cn.servlet.registStateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>registStateServlet</servlet-name>
    <url-pattern>/registStateServlet</url-pattern>
