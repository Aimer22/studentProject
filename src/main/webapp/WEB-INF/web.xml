  </servlet>
  <servlet-mapping>
    <servlet-name>secondStepServlet</servlet-name>
    <url-pattern>/secondStepServlet</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>jsp/login.jsp</welcome-file>
  </welcome-file-list>
</web-app>



